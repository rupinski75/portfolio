<div class="row">
  <div class="card">
    <h2>Articles</h2>
      <% @articles.each do |article| %>
        <h3 class="title"><%= link_to article.title, article %></h3>
        <%= article.body %>
        <div class="t1"><%= article.user.name %></div>
      <% end %>
  </div>
</div>
<% if current_user.admin? %>
  <%= link_to 'New Article', new_article_path %>
<% end %>
