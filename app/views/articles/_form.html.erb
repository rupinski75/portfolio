<%= form_with(model: article, local: true) do |form| %>

<% article.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :Author %>
    <%= form.text_field :user_id  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
