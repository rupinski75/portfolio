<% if current_user && current_user.admin?%>
  <%= link_to 'Create new tag', new_tag_path %>
    <p><% @tags.each do |tag| %>
    <%= tag.name %>
    <%= link_to 'Edit', edit_tag_path(tag) %>
    <%= link_to 'Destroy', tag, method: :delete %></p>
  <% end %>
<% else %>
  <p> You don't have permission to view this page </p>
<% end %>

